<resources>

    <style name="Theme.BookReader" parent="Theme.Leanback">

    </style>

    <style name="Theme.BrowseCustomTitleTheme" parent="Theme.Leanback">
        <item name="browseTitleViewLayout">@layout/custom_title</item>
        <item name="browseRowsMarginTop">130dp</item>
    </style>

    <style name="TransparentActivityTheme" parent="Theme.BookReader">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="App.GuidedStep" parent="Theme.Leanback.GuidedStep">
        <!-- Підміняємо стилі елементів GuidedAction -->
        <item name="guidedActionItemTitleStyle">@style/App.GuidedActionItemTitle</item>
        <item name="guidedActionItemDescriptionStyle">@style/App.GuidedActionItemDescription</item>
        <item name="guidedActionItemIconStyle">@style/App_GuidedActionItemIcon</item>
        <item name="guidedActionItemCheckmarkStyle">@style/App.GuidedActionCheckmark</item>
    </style>

</resources>